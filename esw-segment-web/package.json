{
  "name": "esw-segment-web",
  "author": "TMT",
  "version": "0.1.0",
  "private": false,
  "license": "Apache-2.0",
  "scripts": {
    "build": "electron-snowpack build",
    "clean": "electron-snowpack clean",
    "dev": "electron-snowpack dev",
    "dist": "electron-builder",
    "dist:dir": "npm run dist --dir -c.compression=store -c.mac.identity=null",
    "openMac": "open dist/mac/${npm_package_name}.app",
    "openLinux": "dist/linux-unpacked/${npm_package_name}",
    "tryMac": "run-s clean build dist:dir openMac",
    "tryLinux": "run-s clean build dist:dir openLinux",
    "postinstall": "electron-builder install-app-deps",
    "release": "run-s clean build dist"
  },
  "dependencies": {
    "@tmtsoftware/esw-ts": "^0.1.0",
    "antd": "4.14.0",
    "electron-snowpack": "*",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@snowpack/plugin-react-refresh": "^2.4.0",
    "@testing-library/react": "^11.2.5",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.2",
    "@types/snowpack-env": "^2.3.3",
    "electron": "^12.0.1",
    "electron-builder": "^22.10.5",
    "npm-run-all": "^4.1.5",
    "snowpack": "^3.0.13",
    "typescript": "^4.2.3"
  },
  "build": {
    "extends": "electron-snowpack/config/electron-builder.js"
  }
}
